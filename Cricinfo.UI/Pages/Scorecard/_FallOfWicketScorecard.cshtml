@model int[]
@{
    <table class="table table-sm table-striped table-hover text-center">
        <thead class="text-secondary">
            <tr><th colspan="9">Fall of Wicket</th></tr>
            <tr>
                <th>Runs</th>
                <th>Wicket</th>
            </tr>
        </thead>
        <tbody class="text-info">
            @for (int i = 0; i < @Model.Length; i++)
            {
                <tr>
                    <td>@Model[i]</td>
                    <td>@(i + 1)</td>
                </tr>
            }
        </tbody>
    </table>
}
